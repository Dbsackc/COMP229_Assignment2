          <% } %>
            <a class="nav-link" href="/projects"><i class="fa-solid fa-list-check"></i> Projects </a>
          </li>
  
          <% if (title == "Services") { %>
          <li class="nav-item active">
          <% } else  { %>
          <li class="nav-item">
          <% } %>
            <a class="nav-link" href="/services"><i class="fa-solid fa-hand"></i></i> Services </a>
          </li>
  
